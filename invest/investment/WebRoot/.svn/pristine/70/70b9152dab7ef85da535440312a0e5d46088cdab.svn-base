*{margin: 0px;padding: 0px;}
body{font-size: 12px;margin: 0px;margin-top:-10px;padding: 0px;font-family: '微软雅黑';background: #F5F5F5;}
a{color: #636363; text-decoration: none;}
a:hover{color: #f9371d;}
ul{list-style: none;margin: 0px;padding: 0px;}
input{width:120px;height: 25px;line-height: 25px;padding:0px 5px;margin: 3px;font-size: 1em;}
select{width: 100px;height: 29px;line-height: 25px;font-size: 1em;}
button{height: 25px;padding: 0px 10px;}

#contentLayer{min-height: 480px;width:1080px;margin:10px auto;overflow: hidden;}
#footer{height:30px;background: #E3E3E3;text-align: center;line-height: 30px;width: 100%;min-width:1280px;}

#rightLayer #searchLayer input[type=file]{width: 80px;height: 30px;padding: 0px;margin: 0px;position: absolute;left: 115px;top: 7px;opacity: 0;filter: progid:DXImageTransform.Microsoft.Alpha(opacity=0);}